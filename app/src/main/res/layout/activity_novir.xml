<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.driverjemputyuk.activity_novir"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tfbank"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Transfer Bank 1"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@color/blue"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="30dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_nmrvir"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Nomor Akun Virtual Bank 1"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:layout_marginTop="180dp"
                    android:gravity="center"
                    android:layout_centerInParent="false"/>

                <TextView
                    android:id="@+id/tv_nmrbank"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="5467 2495 2335 232"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:layout_marginTop="230dp"
                    android:gravity="center"
                    android:layout_centerInParent="false"/>

                <Button
                    android:id="@+id/btn_salinkode"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="Salin Kode"
                    android:layout_marginTop="600dp"
                    android:background="@color/blue"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>